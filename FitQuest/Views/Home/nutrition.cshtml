@model FitQuest.Models.DietPlanViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Diet Plan</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }
        header {
            background: #333;
            color: #fff;
            padding-top: 30px;
            min-height: 70px;
            border-bottom: #77aaff 3px solid;
        }
        header a {
            color: #fff;
            text-decoration: none;
            text-transform: uppercase;
            font-size: 16px;
        }
        header ul {
            padding: 0;
            list-style: none;
        }
        header li {
            float: left;
            display: inline;
            padding: 0 20px 0 20px;
        }
        header #branding {
            float: left;
        }
        header #branding h1 {
            margin: 0;
        }
        header nav {
            float: right;
            margin-top: 10px;
        }
        .button {
            display: inline-block;
            color: #fff;
            background: #333;
            padding: 10px 20px;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
        }
        .button:hover {
            background: #77aaff;
        }
        .content {
            padding: 20px;
            background: #fff;
            border-radius: 5px;
            margin-top: 20px;
        }
        .meal {
            margin-bottom: 20px;
        }
        .meal h3 {
            margin: 0;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div id="branding">
                <h1>Diet Plan Generator</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/Home/Nutrition">Generate Diet Plan</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <div class="content">
            <h1>Generate Diet Plan</h1>
            <form method="post">
                <label for="age">Age:</label>
                <input type="number" id="age" name="age" required />
                <label for="gender">Gender:</label>
                <select id="gender" name="gender" required>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
                <label for="weight">Weight (kg):</label>
                <input type="number" id="weight" name="weight" required />
                <label for="height">Height (cm):</label>
                <input type="number" id="height" name="height" required />
                <label for="exerciseGoal">Exercise Goal:</label>
                <select id="exerciseGoal" name="exerciseGoal" required>
                    <option value="lose">Lose Weight</option>
                    <option value="maintain">Maintain Weight</option>
                    <option value="gain">Gain Weight</option>
                </select>
                <label for="exerciseFrequency">Exercise Frequency (days per week):</label>
                <input type="number" id="exerciseFrequency" name="exerciseFrequency" required />
                <button type="submit" class="button">Generate Plan</button>
            </form>
            @if (Model != null && !string.IsNullOrEmpty(Model.DietPlan))
            {
                <h2>Diet Plan Result</h2>
                <div>@Html.Raw(Model.DietPlan)</div>
            }
        </div>
    </div>
</body>
</html>